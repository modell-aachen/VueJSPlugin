%{
  Prints the entire document.
  (wrapped in comments to prevent foswiki's theme engine to produce unwanted paragraphs)
}%
%{}%%TMPL:P{"document"}%%{}%

%{ HTML5 doctype }%
%TMPL:DEF{"doctype"}%<!DOCTYPE html>%TMPL:END%
%TMPL:DEF{"htmlstart"}%<html class="no-js" lang="%LANG%">%TMPL:END%
%TMPL:DEF{"htmlend"}%</html>%TMPL:END%

%TMPL:DEF{"head"}%%{
}%<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="%TOPIC%">
  <meta name="TEXT_NUM_TOPICS" content="%MAKETEXT{"Number of topics:"}%">
  <meta name="TEXT_MODIFY_SEARCH" content="%MAKETEXT{"Modify search"}%">
  <meta name="robots" content="noindex">
  %MAREGISTER{"pace"}%
  <link rel="icon" href="%FAVICON%" type="image/x-icon" />
  <link rel="shortcut icon" href="%FAVICON%" type="image/x-icon" />
  <link rel="alternate" href="%SCRIPTURL{edit}%/%BASEWEB%/%BASETOPIC%?t=%GMTIME{"$epoch"}%" type="application/x-wiki" title="edit %BASETOPIC%" />
  %TMPL:P{"script"}%
  %TMPL:P{"windowtitle"}%
  %TMPL:P{"defaultstyle"}%
  <base href="%SCRIPTURL{%SCRIPTNAME%}%/%WEB%/%TOPIC%" />
</head>%TMPL:END%

%TMPL:DEF{"body"}%%{
}%<!--body:start-->%TMPL:P{"body:start"}%<!--/body:start-->%{
}%<!--topbar-->%TMPL:P{"topbar"}%<!--/topbar-->%{
}%<!--body:content-->%TMPL:P{"body:content"}%<!--/body:content-->%{
}%<!--body:end-->%TMPL:P{"body:end"}%<!--/body:end-->%{
}%%TMPL:END%

%TMPL:DEF{"context"}%approved%TMPL:END%
%TMPL:DEF{"body:start"}%<body class="context-%TMPL:P{"context"}%">%JQREQUIRE{"blockui, cookie, jsonrpc, placeholder"}%
%TMPL:END%

%TMPL:DEF{"body:end"}%
<!--offcanvas:leftbar-->%TMPL:P{"offcanvas:leftbar"}%<!--/offcanvas:leftbar-->
<!--offcanvas:rightbar-->%TMPL:P{"offcanvas:rightbar"}%<!--offcanvas:rightbar-->
<!--offcanvas:search-->%TMPL:P{"offcanvas:search"}%<!--/offcanvas:search-->
<!--offcanvas:rightbar:includes-->%TMPL:P{"offcanvas:rightbar:includes"}%<!--/offcanvas:rightbar:includes-->
<script>
  $(document).qwiki();
</script>
<!-- sidebar:left -->
</body>%TMPL:END%


%TMPL:DEF{"content:head"}%
<a href="#" class="button default tiny" data-offcanvas-toggle data-target="#qw-offcanvas-rightbar" data-type="rightbar">
  <span class="show-for-large-up">Toggle rightbar</span>
</a>
%TMPL:END%

%TMPL:DEF{"body:content"}%
<div class="qw-page follows-canvas" data-offcanvas>
  <section class="qw-left">
    <article class="meta">%TMPL:P{"content:head"}%</article>
    <article class="content">%TMPL:P{"content"}%</article>
  </section>
  <section class="qw-right">
    <article class="content"></article>
  </section>
</div>
%TMPL:END%

%TMPL:DEF{"topbar"}%<!--topbar:one-->%TMPL:P{"topbar:one"}%<!--/topbar:one--><!--topbar:two-->%TMPL:P{"topbar:two"}%<!--/topbar:two-->%TMPL:END%

%TMPL:DEF{"topbar:one"}%
<nav class="qw-top-one">
  <div class="qw-menu" data-offcanvas-toggle data-target="#qw-offcanvas-leftbar" data-type="leftbar">
    <span>
      <i class="qw-menu-icon"></i><span class="qw-menu-text">&nbsp;%MAKETEXT{"Menu"}%</span>
    </span>
    <span>
      <i class="qw-menu-close"></i>
    </span>
  </div>
  <div class="qw-breadcrumbs"><!--breadcrumb-->%TMPL:P{"breadcrumb"}%<!--/breadcrumb--></div>
  <div class="qw-search">
    <span class="close" title="%MAKETEXT{"Close"}%" data-offcanvas-toggle data-target="#qw-searchbar" data-type="search" data-right>
      <i class="fa fa-lg fa-chevron-right"></i>
    </span>
    <span><i class="qw-search-icon" data-offcanvas-toggle data-offcanvas-autoclose="0" data-quicksearch-toggle data-target="#qw-searchbar" data-type="search" data-right></i></span>
    <form action="%SCRIPTURLPATH{view}%/%WEB%/WebSearch" class="qw-search-form">
      <div class="row collapse">
        <div class="small-12 columns qw-inline-input">%JQREQUIRE{"UI::autocomplete"}%
          <input name="search"
                 type="text"
                 class="jqUIAutocomplete {source:'%SCRIPTURL%/rest/SolrPlugin/autocomplete?limit=5', delay: 500}"
                 data-offcanvas-toggle
                 data-offcanvas-autoclose="0"
                 data-quicksearch-toggle
                 data-target="#qw-searchbar"
                 data-type="search"
                 data-right
                 required>
          <label for="search"><span>%MAKETEXT{"Search"}%</span></label>
        </div>
      </div>
    </form>
  </div>
</nav>
%TMPL:END%

%TMPL:DEF{"topbar:two"}%
<nav class="qw-top-two follows-canvas">
  <div class="qw-context">
    <div class="content">
      <!--topbar:two:left-->%TMPL:P{"topbar:two:left"}%<!--/topbar:two:left-->
      <ul class="button-group right visible-for-large-up">
        <!--topbar:two:right-->%TMPL:P{"topbar:two:right"}%<!--/topbar:two:right-->
      </ul>
    </div>
  </div>
  <div class="qw-actions">
    <div class="content">
      <a href="#" class="button tiny secondary">%MAKETEXT{"ToDo"}%</a>
    </div>
  </div>
</nav>
%TMPL:END%


%TMPL:DEF{"offcanvas:leftbar"}%
<div id="qw-offcanvas-leftbar" class="qw-offcanvas-leftbar" data-leftbar>
  <section class="active">
    <span class="heading">%MAKETEXT{"Webs"}%<i class="adorner"></i></span>
    %INCLUDE{"System.QWWebListDefault"}% <!-- ToDo. IF oder configure -->
  </section>
  <section>
    <span class="heading">%MAKETEXT{"Webs"}%<i class="adorner"></i></span>
    %INCLUDE{"System.QWWebListDefault"}% <!-- ToDo. IF oder configure -->
  </section>
</div>
%TMPL:END%

%TMPL:DEF{"offcanvas:rightbar"}%
<div id="qw-offcanvas-rightbar" class="qw-offcanvas-rightbar" data-rightbar>
  <section class="title">
    <a href="#" class="close" data-offcanvas-toggle data-target="#qw-offcanvas-rightbar" data-type="rightbar">
      <i class="fa fa-chevron-right"></i>
    </a>
    <span>%MAKETEXT{"Further Information"}%</span>
  </section>
  <section class="links"><ul></ul></section>
  <section class="container">
    <div class="top">
      <a href="#" class="close"><i class="fa fa-chevron-left"></i> %MAKETEXT{"Back"}%</a>
      <span class="title"></span>
    </div>
    <div class="content">
    </div>
  </section>
</div>
%TMPL:END%

%TMPL:DEF{"offcanvas:search"}%
<section id="qw-searchbar" class="qw-offcanvas-search" data-quicksearch>
  <div class="filter"></div>
  <div class="results"></div>
</section>
<section id="qw-searchpreview">
  <div class="heading">
    <span class="qw-preview-title">%MAKETEXT{"Preview"}%</span>
    <a href="#" class="qw-preview-open-button">%MAKETEXT{"Open"}%</a>
    <a href="#" class="qw-preview-close-button" data-close-preview><i class="fa fa-times"></i> %MAKETEXT{"Close"}%</a>
  </div>
  <div class="content"></div>
</section>
%TMPL:END%

