%{
  Prints the entire document.
  (wrapped in comments to prevent foswiki's theme engine to produce unwanted paragraphs)
}%
%{}%%TMPL:P{"document"}%%{}%

%{ HTML5 doctype }%
%TMPL:DEF{"doctype"}%<!DOCTYPE html>%TMPL:END%
%TMPL:DEF{"htmlstart"}%<html class="no-js" lang="%LANG%">%TMPL:END%
%TMPL:DEF{"htmlend"}%</html>%TMPL:END%

%TMPL:DEF{"head"}%%{
}%<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="%TOPIC%">
  <meta name="TEXT_NUM_TOPICS" content="%MAKETEXT{"Number of topics:"}%">
  <meta name="TEXT_MODIFY_SEARCH" content="%MAKETEXT{"Modify search"}%">
  <meta name="robots" content="noindex">
  %MAREGISTER{"pace"}%
  <link rel="icon" href="%FAVICON%" type="image/x-icon" />
  <link rel="shortcut icon" href="%FAVICON%" type="image/x-icon" />
  <link rel="alternate" href="%SCRIPTURL{edit}%/%BASEWEB%/%BASETOPIC%?t=%GMTIME{"$epoch"}%" type="application/x-wiki" title="edit %BASETOPIC%" />
  %TMPL:P{"script"}%
  %TMPL:P{"windowtitle"}%
  %TMPL:P{"defaultstyle"}%
  <base href="%SCRIPTURL{%SCRIPTNAME%}%/%WEB%/%TOPIC%" />
</head>%TMPL:END%

%TMPL:DEF{"body"}%%{
}%%TMPL:P{"body:start"}%%{
}%%TMPL:P{"topbar"}%%{
}%%TMPL:P{"body:content"}%%{
}%%TMPL:P{"body:end"}%%{
}%%TMPL:END%

%TMPL:DEF{"context"}%approved%TMPL:END%
%TMPL:DEF{"body:start"}%<body class="context-%TMPL:P{"context"}%">%JQREQUIRE{"blockui, cookie, jsonrpc, placeholder"}%
%TMPL:END%

%TMPL:DEF{"body:end"}%
%TMPL:P{"leftbar"}%
%TMPL:P{"searchbar"}%
<script>
  $(document).qwiki();
</script>
<!-- leftbar -->
</body>%TMPL:END%

%TMPL:DEF{"body:content"}%
<div class="qw-page follows-canvas" data-offcanvas>
  <section class="qw-left">
    <article class="meta">
      <div style="width:100%; height:100px; background:#ccc;"></div>
    </article>
    <article class="content">%TMPL:P{"content"}%</article>
  </section>
  <section class="qw-right">
    <article class="content"></article>
  </section>
</div>
%TMPL:END%

%TMPL:DEF{"topbar"}%%TMPL:P{"topbar:one"}%%TMPL:P{"topbar:two"}%%TMPL:END%

%TMPL:DEF{"topbar:one"}%
<nav class="qw-top-one">
  <div class="qw-menu">
    <a href="#" class="button default tiny qw-close-left" title="%MAKETEXT{"Menu"}%" data-offcanvas-toggle data-target="#qw-offcanvas-left">
      <i class="fa fa-reorder "></i><span class="show-for-large-up">&nbsp;&nbsp;%MAKETEXT{"Menu"}%</span>
    </a>
  </div>
  <div class="qw-breadcrumbs">
    %TMPL:P{"breadcrumb"}%
  </div>
  <div class="qw-search">
    <span class="close" title="%MAKETEXT{"Close"}%" data-offcanvas-toggle data-target="#qw-searchbar" data-right>
      <i class="fa fa-lg fa-chevron-right"></i>
    </span>
    <form action="%SCRIPTURLPATH{view}%/%WEB%/WebSearch">
      <div class="row collapse">
        <div class="small-12 columns qw-inline-input">%JQREQUIRE{"UI::autocomplete"}%
          <input name="search"
                 type="text"
                 class="jqUIAutocomplete {source:'%SCRIPTURL%/rest/SolrPlugin/autocomplete?limit=5', delay: 500}"
                 data-offcanvas-toggle
                 data-offcanvas-autoclose="0"
                 data-quicksearch-toggle
                 data-target="#qw-searchbar"
                 data-right
                 required>
          <label for="search"><span>%MAKETEXT{"Search"}%</span></label>
        </div>
      </div>
    </form>
  </div>
</nav>
%TMPL:END%

%TMPL:DEF{"topbar:two"}%
<nav class="qw-top-two follows-canvas">
  <div class="qw-context">
    <div class="content">
      <!-- ToDo. -->
      <a href="%SCRIPTURLPATH{"view"}%/%WEB%/%TOPIC%" class="qw-tab view"><i class="fa fa-check"></i>%MAKETEXT{"Version"}%%REVINFO{format=" $rev"}%</a>
      <a href="%SCRIPTURLPATH{"view"}%/%WEB%/%TOPIC%%WORKFLOWSUFFIX%" class="qw-tab draft"><i class="fa fa-file-text-o"></i>%MAKETEXT{"Version"}%%REVINFO{format=" $percentCALC{\"$INT(1+$rev)\"}$percent, "}%%MAKETEXT{"Draft"}%</a>
      <a href="%SCRIPTURLPATH{"edit"}%/%WEB%/%TOPIC%" class="qw-tab edit"><i class="fa fa-pencil"></i>%MAKETEXT{"Edit draft"}%</a>
      <ul class="button-group right visible-for-large-up">
        <li><a href="#" class="qw-action-button"><i class="fa fa-bookmark-o"></i></a></li>
        <li><a href="#" class="qw-action-button"><i class="fa fa-print"></i></a></li>
        <li><a href="#" class="qw-action-button"><i class="fa fa-cog"></i></a></li>
        <li>
          <a href="#" data-dropdown="qw-lang-drop" class="qw-action-button dropdown">
            <i class="fa fa-flag show-for-small-only"></i>
            <span class="show-for-medium-up">deutsch</span>
          </a>
        </li>
        <ul id="qw-lang-drop" data-dropdown-content class="f-dropdown">
          <li><a href="#">lang 1</a></li>
          <li><a href="#">lang 2</a></li>
          <li><a href="#">lang 3</a></li>
        </ul>
      </ul>
    </div>
  </div>
  <div class="qw-actions">
    <div class="content">
      <a href="#" class="button tiny secondary">%MAKETEXT{"ToDo"}%</a>
    </div>
  </div>
</nav>
%TMPL:END%


%TMPL:DEF{"leftbar"}%
<div id="qw-offcanvas-left" class="qw-offcanvas-target-left" data-leftbar>
  <section class="active">
    <span class="heading">%MAKETEXT{"Webs"}%<i class="adorner"></i></span>
    %INCLUDE{"System.QWWebListDefault"}% <!-- ToDo. IF oder configure -->
  </section>
  <section>
    <span class="heading">%MAKETEXT{"Webs"}%<i class="adorner"></i></span>
    %INCLUDE{"System.QWWebListDefault"}% <!-- ToDo. IF oder configure -->
  </section>
</div>
%TMPL:END%

%TMPL:DEF{"searchbar"}%
<section id="qw-searchbar" class="qw-offcanvas-target-right" data-quicksearch>
  <div class="filter">
  </div>

  <div class="results">
  </div>
</section>
<section id="qw-searchpreview">
  <div class="heading">
    <span class="qw-preview-title">%MAKETEXT{"Preview"}%</span>
    <a href="#" class="qw-preview-open-button">%MAKETEXT{"Open"}%</a>
    <a href="#" class="qw-preview-close-button" data-close-preview><i class="fa fa-times"></i> %MAKETEXT{"Close"}%</a>
  </div>
  <div class="content"></div>
</section>
%TMPL:END%

