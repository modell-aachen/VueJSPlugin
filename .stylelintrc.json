{
    "extends": "stylelint-config-recommended",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
        "scss/at-rule-no-unknown": true,
        "at-rule-no-unknown": [ true, {
            "ignoreAtRules": [
              "extends", "include", "mixin", "extend", "each"
            ]
        }],
        "block-no-empty": null,
        "unit-whitelist": ["em", "rem", "s", "px"]
    }
}